div#PrinterRecordDelivery{
    .print-header{
        .header-content{
            text-align: left;
            p{
                margin: 0;
                
            }
            span{
                margin-left: 30px;
            }
            
        }
    }
    .print-address{
        padding: 20px 2rem;
        // h3{
        //     margin: 0;
        // }
        h3{
            text-align: center;
        }
        h4{
            text-align: center;
            font-style: italic;
            font-weight: 700;
        }
        .bt{
            display: block;
        }
        p{
            font-size: 17px;
            .day{
                margin-left: 30px;
            }
            .checked{
                margin-left: -70px;
            }
            .coppy2{
                font-size: 14px;
            }
            .bold{
                font-weight: 700;
            }
        }
    }
    .print-table{
        .table{
            font-size: 16px;
            
            .result{
                font-weight: 700;
            }
            .cot1{
                text-align: center;
                align-items: center;
                // width: 50px;
            }
            .cot2{
                text-align: center;
                align-items: center;
                // width: 271px;
            }
        }
        h3{
            text-align: center;
        }
    }
    .signature{
        p{
            margin: 0;
        }
    }
}
