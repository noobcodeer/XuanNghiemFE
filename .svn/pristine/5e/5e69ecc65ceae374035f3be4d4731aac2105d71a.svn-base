@media screen {
	div#PrinterRecordDelivery {
        display: none;
    }		
}
@media print {
    @page{
        margin:0 20px; 
       
    }
	div#PrinterRecordDelivery {
		.print-table{
            .table{
                font-size: 16px;
                width: 97%;
                tbody{
                    tr{
                        height: 2.5rem;
                        th{
                            align-items: center;
                        }
                    }
                }
                .result{
                    font-weight: 700;
                }
                .cot1{
                    text-align: center;
                    align-items: center;
                    width: 50px;
                }
                .cot2{
                    text-align: center;
                    align-items: center;
                    width: 271px;
                }
            }
            h3{
                text-align: center;
            }
        }
	}
}